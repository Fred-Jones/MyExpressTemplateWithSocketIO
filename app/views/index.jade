
extends layout
block css
  link(rel='stylesheet' href='/css/index/indexmedia.css')
block content
  include ./modals/signup_modal
  include ./modals/login_modal
  .page.container-fluid
    .inner
      a(id='enter' href='atrium')
        for l in 'ENTER'
          div(style='display: inline-block; margin: .5em;') #{l}
      .buttons.col-sm-12
        button.btn.col-sm-4(id='login' type='button' href='#' data-toggle='modal' data-target='#loginmodal' style='margin: 15px')
          for m in 'Login'
            div(style='display: inline-block; margin: .1em;') #{m}
        button.btn.col-sm-4(id='signup' type='button' href='#' data-toggle='modal' data-target='#signupmodal' style='margin: 15px')
          for n in 'Signup'
            div(style='display: inline-block; margin: .1em;') #{n}
  .footer
    .inner
      div Some Text 
  script(src='/js/index/lgsu.js')
  style(type='text/css').
    
    .page > .inner {
      overflow: hidden;
      height: 100vh;
      width: 100vw;
    }
    .buttons{
      left: 12vw;
    }
    .btn{
      margin-left: auto;
      margin-right: auto;
    }
